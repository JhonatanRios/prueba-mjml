        </mj-navbar>
      </mj-column>
    </mj-section>
    <!-- Company Header -->
    <mj-section background-color="#f0f0f0">
      <mj-column>
        <mj-text  font-style="italic"
                  font-size="20px"
                  color="#626262">
          My Company
        </mj-text>
      </mj-column>
    </mj-section>
    <!-- Image Header -->
